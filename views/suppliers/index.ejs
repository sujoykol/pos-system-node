
<a href="/suppliers/add" class="btn btn-primary">Add Supplier</a>
<table class="table">
  <thead>
    <tr><th>Name</th><th>Email</th><th>Phone</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.email %></td>
        <td><%= s.phone %></td>
        <td>
          <a href="/suppliers/edit/<%= s.id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/suppliers/delete/<%= s.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <% for(let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>
  </ul>
</nav>

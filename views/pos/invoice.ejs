<h2>Invoice #<%= sale.id %></h2>
<p>Date: <%= moment(sale.date).format('YYYY-MM-DD HH:mm') %></p>
<p>Payment Mode: <%= sale.payment_mode %></p>
<table class="table table-bordered">
  <thead>
    <tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th></tr>
  </thead>
  <tbody>
    <% items.forEach(item => { %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td>₹<%= item.price %></td>
        <td>₹<%= item.quantity * item.price %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<h4>Total: ₹<%= sale.total %></h4>
<a href="/pos" class="btn btn-primary">Back to POS</a>
